{
  "name": "@restorecommerce/identity-srv",
  "version": "0.1.5",
  "description": "Restore Commerce identity service",
  "main": "lib/start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/identity-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "identity",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/acs-client": "^0.2.6",
    "@restorecommerce/chassis-srv": "^0.1.4",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "0.0.7",
    "@restorecommerce/kafka-client": "^0.1.12",
    "@restorecommerce/logger": "^0.2.1",
    "@restorecommerce/protos": "https://github.com/restorecommerce/protos#protos-auth-log",
    "@restorecommerce/resource-base-interface": "0.0.5",
    "@restorecommerce/service-config": "^0.2.0",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.2",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/eslint-plugin-tslint": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "coveralls": "^3.0.11",
    "eslint": "^7.7.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^8.1.2",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "test": "npm run lint && nyc npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test-debug": "mocha -R spec ./test/*.js --inspect-brk",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "createtopics": "node setupTopics.js io.restorecommerce.users.resource io.restorecommerce.roles.resource io.restorecommerce.rendering io.restorecommerce.command io.restorecommerce.authentication_log",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node lib/healthcheck.js"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
