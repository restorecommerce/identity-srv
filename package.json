{
  "name": "@restorecommerce/identity-srv",
  "version": "0.1.0",
  "description": "Restore Commerce identity microservice",
  "main": "index.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/identity-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "identity",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.0",
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.0",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/resource-base-interface": "github:restorecommerce/resource-base-interface",
    "@restorecommerce/service-config": "^0.1.0",
    "bcryptjs": "^2.3.0",
    "co": "^4.6.0",
    "lodash": "^4.13.1",
    "node-fetch": "^1.7.3",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.39",
    "@types/should": "^11.2.0",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.4",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "should": "^11.2.1"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "export NODE_ENV=development; npm run createtopics && nodemon start.js",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "npm run lint && npm run mocha",
    "lint": "tslint './client/*.ts' './service.ts' './start.ts'",
    "mocha": "export NODE_ENV=test; mocha -R spec ./test/*.js --full-trace --exit",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6",
    "test-debug": "mocha -R spec ./test/*.js --inspect-brk",
    "coveralls": "export NODE_ENV=test; istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/*.js --exit",
    "createtopics": "node setupTopics.js io.restorecommerce.users.resource io.restorecommerce.roles.resource io.restorecommerce.rendering io.restorecommerce.command",
    "postinstall": "tsc -d"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
