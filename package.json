{
  "name": "@restorecommerce/identity-srv",
  "version": "0.1.16",
  "description": "Restore Commerce identity microservice",
  "main": "index.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/identity-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "identity",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.1",
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.7",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/resource-base-interface": "github:restorecommerce/resource-base-interface",
    "@restorecommerce/service-config": "^0.1.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^5.2.0",
    "lodash": "^4.17.11",
    "node-fetch": "^2.6.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "coveralls": "^3.0.4",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "should": "^13.2.3",
    "tslint": "^5.18.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './*ts' --exec 'ts-node' start.ts",
    "pretest": "npm run tsctests && npm run createtopics",
    "test": "npm run lint && npm run mocha",
    "lint": "tslint client/*.ts service.ts start.ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "test-debug": "mocha -R spec ./test/*.js --inspect-brk",
    "coveralls": "nyc --reporter text --reporter lcov npm test",
    "createtopics": "node setupTopics.js io.restorecommerce.users.resource io.restorecommerce.roles.resource io.restorecommerce.rendering io.restorecommerce.command",
    "postinstall": "tsc -d",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf service.js start.js worker.js",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
