{
  "logger": {
    "elasticsearch": {
      "level": "error",
      "clientOpts": {
        "node": "http://elasticsearch:9200"
      },
      "dataStream": true,
      "source": "identity-srv"
    },
    "console": {
      "handleExceptions": false,
      "level": "silly",
      "colorize": true,
      "prettyPrint": true
    }
  },
  "redis": {
    "url": "redis://redis:6379"
  },
  "client": {
    "acs-srv": {
      "address": "access-control-srv:50051"
    },
    "user": {
      "address": "identity-srv:50051"
    }
  },
  "service": {
    "hbsTemplates": {
      "registrationSubjectTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/registration_subject.hbs",
      "registrationBodyTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/registration_body.hbs",
      "changePWEmailSubjectTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/change_password_email_subject.hbs",
      "changePWEmailBodyTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/change_password_email_body.hbs",
      "invitationSubjectTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/invitation_subject.hbs",
      "invitationBodyTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/invitation_body.hbs",
      "layoutTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/layout.hbs",
      "resourcesTpl": "http://console.restorecommerce.io/internal/identity-srv/templates/resources.json"
    }
  },
  "database": {
    "main": {
      "provider": "arango",
      "host": "arangodb",
      "port": 8529,
      "database": "identity-srv",
      "autoCreate": true
    }
  },
  "events": {
    "kafka": {
      "kafka": {
        "brokers": [
          "kafka:9092"
        ]
      }
    }
  },
  "authorization": {
    "cache": {
      "url": "redis://redis:6379"
    }
  },
  "server": {
    "transports": [
      {
        "name": "grpcIdentity",
        "provider": "grpc",
        "addr": "0.0.0.0:50051"
      }
    ]
  }
}
