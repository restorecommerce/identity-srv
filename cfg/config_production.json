{
  "logger": {
    "elasticsearch": {
      "level": "error",
      "clientOpts": {
        "node": "http://elasticsearch:9200"
      },
      "source": "identity-srv"
    }
  },
  "redis": {
    "host": "redis"
  },
  "client": {
    "acs-srv": {
      "publisher": {
        "name": "static",
        "instances": [
          "grpc://access-control-srv:50051"
        ]
      }
    }
  },
  "service": {
    "hbsTemplates": {
      "registerSubjectURL": "http://restorecommerce-console:8080/identity-srv/templates/register_subject.hbs",
      "registerBodyURL": "http://restorecommerce-console:8080/identity-srv/templates/register_body.hbs",
      "changeSubjectURL": "http://restorecommerce-console:8080/identity-srv/templates/change_subject.hbs",
      "changeBodyURL": "http://restorecommerce-console:8080/identity-srv/templates/change_body.hbs",
      "invitationSubjectURL": "http://restorecommerce-console:8080/identity-srv/templates/invitation_subject.hbs",
      "invitationBodyURL": "http://restorecommerce-console:8080/identity-srv/templates/invitation_body.hbs",
      "layoutURL": "http://restorecommerce-console:8080/identity-srv/templates/layout.hbs",
      "resourcesURL": "http://restorecommerce-console:8080/identity-srv/templates/resources.json"
    }
  },
  "database": {
    "main": {
      "provider": "arango",
      "host": "arangodb",
      "port": 8529,
      "database": "identity-srv",
      "autoCreate": true
    }
  },
  "events": {
    "kafka": {
      "kafkaHost": "kafka:9092"
    }
  },
  "authorization": {
    "cache": {
      "host": "redis"
    }
  },
  "server": {
    "transports": [
      {
        "name": "grpcIdentity",
        "provider": "grpc",
        "services": {
          "io-restorecommerce-user-srv": "io.restorecommerce.user.Service",
          "io-restorecommerce-role-srv": "io.restorecommerce.role.Service",
          "io-restorecommerce-authentication-log-srv": "io.restorecommerce.authentication_log.Service",
          "io-restorecommerce-token-srv": "io.restorecommerce.token.Service",
          "io-restorecommerce-identity-reflection": "grpc.reflection.v1alpha.ServerReflection",
          "io-restorecommerce-identity-cis": "io.restorecommerce.commandinterface.Service",
          "grpc-health-v1": "grpc.health.v1.Health"
        },
        "protos": [
          "io/restorecommerce/user.proto",
          "io/restorecommerce/role.proto",
          "io/restorecommerce/authentication_log.proto",
          "io/restorecommerce/token.proto",
          "grpc/reflection/v1alpha/reflection.proto",
          "io/restorecommerce/commandinterface.proto",
          "grpc/health/v1/health.proto"
        ],
        "protoRoot": "node_modules/@restorecommerce/protos/",
        "addr": "0.0.0.0:50051"
      }
    ]
  }
}
