{
  "logger": {
    "elasticsearch": {
      "level": "error",
      "clientOpts": {
        "host": "elasticsearch:9200"
      },
      "source": "identity-srv"
    }
  },
  "client": {
    "hbs_templates": {
      "prefix": "http://xingular-console:80/"
    },
    "service-notification": {
      "transports": {
        "grpc": {
          "service": "io.restorecommerce.notification.Service",
          "timeout": 3000,
          "protos": [
            "io/restorecommerce/notification.proto"
          ],
          "protoRoot": "./protos/"
        }
      },
      "endpoints": {
        "send": {
          "loadbalancer": {
            "name": "roundRobin"
          },
          "publisher": {
            "name": "static",
            "instances": [
              "grpc://identity-srv:50051"
            ]
          }
        }
      }
    }
  },
  "database": {
    "main": {
      "provider": "arango",
      "host": "arangodb",
      "port": 8529,
      "database": "identity-srv",
      "autoCreate": true
    }
  },
  "events": {
    "kafka": {
      "connectionString": "zookeeper:2181"
    }
  },
  "server": {
    "transports": [
      {
        "name": "grpcIdentity",
        "provider": "grpc",
        "services": {
          "user": "io.restorecommerce.user.Service",
          "reflection": "grpc.reflection.v1alpha.ServerReflection",
          "commandinterface": "io.restorecommerce.commandinterface.Service"
        },
        "protos": [
          "io/restorecommerce/user.proto",
          "grpc/reflection/v1alpha/reflection.proto",
          "io/restorecommerce/commandinterface.proto"
        ],
        "protoRoot": "node_modules/@restorecommerce/protos/",
        "addr": "identity-srv:50051"
      }
    ]
  }
}
